{% extends 'back.html.twig' %}

{% block body %}
    <div class="kt-portlet">
        <div class="kt-portlet__head">
            <div class="kt-portlet__head-label">
                <h3 class="kt-portlet__head-title">
                    Détails de l'événement : {{ event.title }}
                </h3>
            </div>
        </div>
        <div style="margin-top: -65px;" class="kt-portlet__body">
            <!--begin::Section-->
            <div class="kt-section">
                <div class="kt-section__content">
                    <table class="table">
                        <thead class="thead-light">
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Lieu</th>
                            <th>Places</th>
                            <th>Etat</th>
                            <th>Date Début</th>
                            <th>Date Fin</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <th scope="row">{{ event.id }}</th>
                            <td>{{ event.title }}</td>
                            <td>{{ event.description }}</td>
                            <td>{{ event.location }}</td>
                            <td>{{ event.nbPlace }}</td>
                                <td>
                                    <button type="button" class="btn btn-success btn-sm">{{ event.state }}</button>
                                </td>
                            <td>{{ event.startDate | date("j. F Y", "Europe/Paris") }}</td>
                            <td>{{ event.endDate | date("j. F Y", "Europe/Paris") }}</td>
                        </tr>

                        </tbody>
                    </table>



                </div>
            </div>
            <!--end::Section-->
            <h3 class="kt-portlet__head-title">
               Liste des participants
            </h3>
            <div class="kt-section">
                <div class="kt-section__content">
                    <table class="table">
                        <thead class="thead-light">
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Username</th>
                            <th>QR Code</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in event.participants %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <td>{{ user.firstName }}</td>
                            <td>{{ user.lastName }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.username }}</td>
                            <td style="width: 25%;"><img style="width: 25%;" src="{{ asset(user.username ~ '.png') }}" alt=""></td>
                        </tr>
                        {% endfor %}

                        </tbody>
                    </table>



                </div>
            </div>
        </div>
    </div>
{% endblock %}