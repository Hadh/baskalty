<body>
<style>
    .txt {
        font-size: 18px;
    }
</style>
<h3 class="card-title">Détails et Liste des Partitipants pour event : {{ event.id}} - {{ event.title}}  </h3>
<div class="txt">
    <h3>1 -Details</h3>
            <table class="table">
                <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Lieu</th>
                    <th>Places</th>
                    <th>Etat</th>
                    <th>Date Début</th>
                    <th>Date Fin</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">{{ event.id }}</th>
                        <td>{{ event.title }}</td>
                        <td>{{ event.description }}</td>
                        <td>{{ event.location }}</td>
                        <td>{{ event.nbPlace }}</td>
                        <td>{{ event.state }}</td>
                        <td>{{ event.startDate | date("j. F Y", "Europe/Paris") }}</td>
                        <td>{{ event.endDate | date("j. F Y", "Europe/Paris") }}</td>
                </tbody>
            </table>
    <h3>Liste des participatns</h3>
        <ul>
            {% if event.participants[0] != null %}
            {% for user in users %}
            <li>
                - # {{ user.id}} : {{ user.firstName }} - {{ user.lastName }} - {{ user.email }}
            </li>
            {% endfor %}
            {% endif %}
        </ul>
</div>
